<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="sample.regFunctions" fx:id="regForm" prefHeight="390.0" prefWidth="420.0"
      xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="320.0" prefWidth="420.0" VBox.vgrow="ALWAYS">
        <TextField fx:id="userText" alignment="CENTER" layoutX="138.0" layoutY="38.0" prefHeight="35.0" prefWidth="200.0"
                   promptText="gmail">
            <font>
              <Font size="15.0"/>
            </font>
        </TextField>
        <PasswordField fx:id="passText" alignment="CENTER" layoutX="138.0" layoutY="92.0" prefHeight="35.0" prefWidth="200.0"
                       promptText="pass">
            <font>
              <Font size="15.0"/>
            </font>
        </PasswordField>
        <PasswordField fx:id="confText" alignment="CENTER" layoutX="138.0" layoutY="148.0" prefHeight="35.0" prefWidth="200.0"
                       promptText="confirm pass">
            <font>
              <Font size="15.0"/>
            </font>
        </PasswordField>
        <Button alignment="CENTER" layoutX="138.0" layoutY="206.0" mnemonicParsing="false" prefHeight="35.0"
                prefWidth="200.0" text="Done!" onAction="#requestNewAcc"/>
    </AnchorPane>
</VBox>
